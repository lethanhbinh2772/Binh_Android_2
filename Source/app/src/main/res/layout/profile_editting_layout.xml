<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#FFFCCC"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp">

        <ImageView
            android:id="@+id/img_back_edif"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/tv_taikhoan2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sửa thông tin"
            android:gravity="center_vertical"
            android:textColor="#262626"
            android:textSize="20sp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Họ và tên:"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_weight="0.5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="30dp"
        android:background="#FEFEFE"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Số điện thoại:"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_weight="0.5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="30dp"
        android:background="#FEFEFE"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Email:"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="30dp"
        android:background="#FEFEFE"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_update_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:text="Cập nhật"
        android:paddingHorizontal="40dp"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/edit_button_selector"/>
</LinearLayout>